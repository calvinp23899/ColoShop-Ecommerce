
@{
    ViewBag.Title = "Thêm Mới Danh Mục";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Tạo Mới Danh Mục</h4>
                        <form class="forms-sample" action="/admin/category/add" method="post">

                            <div class="form-group">
                                <label for="exampleInputName1">Tên Danh Mục</label>
                                <input type="text" class="form-control" name="txtTitle" placeholder="Tên danh mục" />

                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail3">Mô Tả</label>
                                <textarea class="form-control" name="txtDescription" rows="4"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName1">Thứ Tự</label>
                                <input type="number" class="form-control" name="txtPosition" placeholder="1" />

                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword4">Seo Title</label>
                                <input type="text" class="form-control" name="txtSeoTitle" placeholder="..." />
                            </div>
                            <div class="form-group">
                                <label for="exampleSelectGender">Seo Description</label>
                                <textarea class="form-control" name="txtSeoDescription" rows="4"></textarea>

                            </div>
                            <div class="form-group">
                                <label for="exampleSelectGender">SeoKeyword</label>
                                <textarea class="form-control" name="txtSeoKeyword" rows="4"></textarea>

                            </div>
                            <button type="submit" class="btn btn-primary mr-2">Submit</button>
                            <a href="/admin/category" class="btn btn-warning">Quay Lại</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

