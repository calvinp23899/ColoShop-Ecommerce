@model IEnumerable<ColoShopEcommerce.WebApp.Models.EF.News>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="card">
            <div class="card-body">
                @*Custom đường dẫn*@
                <div>
                    <a href="/admin/news/add" class="btn btn-primary">Thêm mới Tin Tức</a>
                </div>

                <br />
                <div class="row">
                    <div class="col-12">
                        <div class="table-responsive">
                            <table id="order-listing" class="table">
                                <thead>
                                    <tr>
                                        <th>STT #</th>
                                        <th>Hình Ảnh</th>
                                        <th>Tiêu Đề</th>
                                        <th>Ngày Tạo</th>
                                        <th>Tình Trạng</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {

                                        var i = 1;
                                        foreach (var item in Model)
                                        {
                                            <tr id="trow_@item.Id">

                                                <td>@i</td>
                                                <td>
                                                    <img src="~/UploadImageNews/@item.Image" width="100" height="100" />
                                                    
                                                </td>
                                                <td>@Html.Raw(@item.Title.Remove(50))..</td>
                                                <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                                                <td>@(item.IsActive? "Hiển Thị": "Không Hiển Thị")</td>
                                                <td>
                                                    <a href="/admin/news/edit/@item.Id" class="btn btn-outline-primary">Sửa</a>
                                                    <a href="#" data-id="@item.Id" class="btn btn-outline-primary btnDelete" onclick="showSuccessToast()">Xóa</a>
                                                </td>
                                            </tr>
                                            i++;
                                        }

                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="4"> Không có bản ghi nào ... </td>
                                        </tr>
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- content-wrapper ends -->
    <!-- partial -->
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            $('body').on('click', '.btnDelete', function () {
                var id = $(this).data("id");
                var msg = confirm('Bạn có muốn xóa bản ghi này không ?');
                if (msg === true) {
                    $.ajax({
                        url: '/admin/news/delete',
                        type: 'POST',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                                $('#trow_' + id).remove();
                            }
                        }
                    });
                }
                return false;
            });
        });
    </script>
}
